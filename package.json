{
  "name": "tripfood-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Sistema de gestion de compras de comida y bebida para viajes de grupo",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
